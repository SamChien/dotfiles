#git
alias gpull 'git pull --rebase -v -p'
alias glog "git log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative"
alias gitpullall "find . -maxdepth 1 -type d -exec sh -c '(cd {} && git pull -v -p)' ';'"
alias gd "git diff"
alias gs "git status"
alias gc "git checkout"
alias gcm "git checkout master"
alias gct "git checkout ticket\!:1"
alias gm "git commit -vp"
alias gbr "git branch"
alias gl "git log"

alias cleartag "( git tag -l | xargs git tag -d )"
alias clearbranch "git remote prune origin"
